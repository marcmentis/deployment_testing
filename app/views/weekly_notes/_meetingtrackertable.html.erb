<table id="meetingtrackertable">
	<thead>
		<tr class="tableHeader">
			<th class="hide"><%= sort_link(@q, :patient_id) %></th>
			<th><%= sort_link(@q, :patient_firstname) %></th>
			<th><%= sort_link(@q, :patient_lastname) %></th>
			<th><%= sort_link(@q, :patient_number) %></th>
			<th><%= sort_link(@q, :patient_ward) %></th>
			<th><%= sort_link(@q, :patient_doa, "DOA") %></th>
			<th><%= sort_link(@q, :danger_yn, "Danger") %></th>
			<th><%= sort_link(@q, :meeting_date, "Meeting") %></th>
			<th><%= sort_link(@q, :drugs_last_changed, "Med change") %></th>
			<th><%= sort_link(@q, :pre_date_yesno, "Pre") %></th>
			<th><%= sort_link(@q, :pre_date, "Pre") %></th>
		</tr>
	</thead>
	<tbody>
		<% @weeklyNotes.each do |note| %>
			<tr>
				<td class="hide"><%= note.patient.id %></td>
				<td><%= note.patient.firstname %></td>
				<td><%= note.patient.lastname %></td>
				<td><%= note.patient.number %></td>
				<td><%= note.patient.ward %></td>
				<% unless note.patient.doa.blank? %>
				<td><%= note.patient.doa.strftime('%F') %></td>
				<% else %>
				<td></td>
				<% end %>
				<td><%= note.danger_yn %></td>
				<% unless note.meeting_date.blank? %>
					<td><%= note.meeting_date.strftime('%F') %></td>
				<% else %>
					<td></td>
				<% end %>
				<td><%= note.drugs_last_changed %></td>
				<td><%= note.pre_date_yesno %></td>
				<% unless note.pre_date.blank? %>
					<td><%= note.pre_date.strftime('%F') %></td>
				<% else %>
					<td></td>
			</tr>
				<% end %>						
		<% end %>
		<tr>
			<td colspan="7" class="tableFooter">
				<%= paginate @weeklyNotes %>
			</td>
			<td colspan="3" class="tableFooter">
				 <%= @searchNumber %>  from <%= @totNumber %> total
			</td>
		</tr>
	</tbody>
</table>
