<h1>Listing patients</h1>

<table>
  <thead>
    <tr>
      <th>Firstname</th>
      <th>Lastname</th>
      <th>Number</th>
      <th>Facility</th>
      <th>Ward</th>
      <th>Doa</th>
      <th>Dob</th>
      <th>Dod</th>
      <th>Updated by</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @patients.each do |patient| %>
      <tr>
        <td><%= patient.firstname %></td>
        <td><%= patient.lastname %></td>
        <td><%= patient.number %></td>
        <td><%= patient.facility %></td>
        <td><%= patient.ward %></td>
        <td><%= patient.doa %></td>
        <td><%= patient.dob %></td>
        <td><%= patient.dod %></td>
        <td><%= patient.updated_by %></td>
        <td><%= link_to 'Show', patient %></td>
        <td><%= link_to 'Edit', edit_patient_path(patient) %></td>
        <td><%= link_to 'Destroy', patient, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

